# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation for Python files
[*.py]
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true

# 2 space indentation for TypeScript files
[*.ts]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true

# 2 space indentation for TypeScript React files
[*.tsx]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true

# 2 space indentation for JSON files
[*.json]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true

# 2 space indentation for CSS files
[*.css]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true

# 2 space indentation for JavaScript files
[*.js]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true

# 2 space indentation for HTML files
[*.html]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true